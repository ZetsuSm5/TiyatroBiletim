@using TiyatroBİLETİM.Enity;
@Model IEnumerable<Oyunlarimiz>
    @{
        ViewBag.Title = "Index";
    }



    <div class="jumbotron">
        <h5 class="display-4">Hoşgeldiniz!</h5>
        <p class="lead">Sitemize Hoşgeldiniz.Bu site size umarım aradığınız Tiyatro keyfini sunar</p>
        <hr class="my-4">
        <p>Galerimize Göz atın</p>
        <a class="btn btn-primary btn-lg" href="/Home/Oyunlar" role="button">Gişe</a>
        <link rel="stylesheet" href="~/Gise/css/style.css">

    </div>


    <div class="row">

        @foreach (var Oyunlars in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="holder.js/100px160/" class="card-img-top" alt="@Oyunlars.Name">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="Home/FilmDetayları/@Oyunlars.Id">@Oyunlars.Name</a>
                         
                         </h5>

                        <p class="card-text">@Oyunlars.Description</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">@Oyunlars.Price</small>
                    </div>
                </div>

            </div>

         }


    </div>





